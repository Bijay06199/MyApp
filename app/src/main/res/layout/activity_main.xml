<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginLeft="50dp"
            android:background="#FCFBFB"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_button" />

            <TextView
                android:id="@+id/recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:text="Cooking Recipe"
                android:textColor="#181717"
                android:textSize="32dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_button" />

        </LinearLayout>

        <TextView
            android:id="@+id/nonVeg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="Non Vegetarian Food(Swipe) "
            android:textColor="#1C1C1D"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/beef_wilington"
                        android:layout_width="420dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/beef_wilington"
                        android:padding="20dp"
                        android:text="Beef Wilington"
                        android:textColor="#F1F2F5"
                        android:textSize="30dp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/butter_chicken"
                        android:layout_width="420dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/butter_chicken"
                        android:text="Butter Chicken"
                        android:textColor="#F1F3F7"
                        android:textSize="30dp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/chicken"
                        android:layout_width="420dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/chicken"
                        android:text="Chicken"
                        android:textColor="#EDEEF0"
                        android:textSize="30dp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/chicken_tikka"
                        android:layout_width="420dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/chicken_tikka"
                        android:text="Chicken Tikka"
                        android:textColor="#F5EFEF"
                        android:textSize="30dp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/chickendum_biryani"
                        android:layout_width="420dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/chickendum_biryani"
                        android:text="Chickendum Biryani"
                        android:textColor="#E7EBF0"
                        android:textSize="30dp"
                        android:textStyle="italic" />


                    <Button
                        android:id="@+id/chicken-tandori"
                        android:layout_width="420dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/chicken_tandori"
                        android:text="Chicken Tandori"
                        android:textColor="#EDF0F3"
                        android:textSize="30dp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/handi_biryani"
                        android:layout_width="420dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/handi_biryani"
                        android:text="Handi Biryani"
                        android:textColor="#E8EBEE"
                        android:textSize="30dp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/hot_dog"
                        android:layout_width="420dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/hot_dog"
                        android:text="Hot Dog"
                        android:textColor="#EDF0F3"
                        android:textSize="30dp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/hyderbadi_biryani"
                        android:layout_width="420dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/hyderabadi_biryani"
                        android:text="Hyderbadi Biryani"
                        android:textColor="#E3E4E7"
                        android:textSize="30dp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/naan"
                        android:layout_width="420dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/naan"
                        android:text="naan"
                        android:textColor="#EEEFF0"
                        android:textSize="30dp"
                        android:textStyle="italic" />
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
        <RatingBar
            android:id="@+id/ratingBar1"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/veg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="Vegetarian Food(Swipe)"
            android:textColor="#1B1A1A"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:layout_width="447dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">


                    <Button
                        android:id="@+id/chilli_corn"
                        android:layout_width="420dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/chilli_corn"
                        android:text="Chilli Corn"
                        android:textColor="#E7E9EB"
                        android:textSize="30dp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/corn_pudding"
                        android:layout_width="420dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/corn_pudding"
                        android:text="Corn Pudding"
                        android:textColor="#F2F4F7"
                        android:textSize="30dp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/creamy_grape"
                        android:layout_width="420dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/creamy_grape"
                        android:text="Creamy Grape"
                        android:textColor="#E9EBF0"
                        android:textSize="30dp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/crustless_spinach"
                        android:layout_width="420dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/crustless_spinach"
                        android:text="Crustless Spinach"
                        android:textColor="#E9EFF7"
                        android:textSize="30dp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/funnel_cakes"
                        android:layout_width="420dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/funnel_cakes"
                        android:text="Funnel Cakes"
                        android:textColor="#E2E6EC"
                        android:textSize="30dp"
                        android:textStyle="italic" />


                    <Button
                        android:id="@+id/hearty_vegetables"
                        android:layout_width="420dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/hearty_vegetable"
                        android:text="Hearty Vegetables"
                        android:textColor="#F2F5F8"
                        android:textSize="30dp"
                        android:textStyle="italic" />


                    <Button
                        android:id="@+id/lasanga"
                        android:layout_width="420dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/lasanga"
                        android:text="Lasanga"
                        android:textColor="#D2D5DA"
                        android:textSize="30dp"
                        android:textStyle="italic" />


                    <Button
                        android:id="@+id/pumpkin_bread"
                        android:layout_width="420dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/pumpkin_bread"
                        android:text="Pumpkin Bread"
                        android:textColor="#E9EDF3"
                        android:textSize="30dp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/rubhbab"
                        android:layout_width="420dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rubhab"
                        android:text="Rhubab"
                        android:textColor="#D9E0E9"
                        android:textSize="30dp"
                        android:textStyle="italic" />


                    <Button
                        android:id="@+id/cauliflower_soup"
                        android:layout_width="420dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/cauliflower_soup"
                        android:text="Cauliflower Soup"
                        android:textColor="#D9E0E9"
                        android:textSize="30dp"
                        android:textStyle="italic" />

                </LinearLayout>


            </HorizontalScrollView>
        </LinearLayout>
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="PLZ Rate Our App"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textSize="60dp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>


</RelativeLayout>